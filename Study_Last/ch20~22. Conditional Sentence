# if 조건문 - 예(1)
raw_input = input("정수를 입력해주세요: ")
raw_input = int(raw_input)

if (raw_input > 0):
  print("양수입니다!")

if (raw_input < 0):
  print("음수입니다!")

if (raw_input == 0):
  print("0입니다!")
  
  
# if 조건문 - 예(2)
from pytz import timezone
from datetime import datetime 

today = datetime.now(timezone("Asia/Seoul"))

print(f"{today.hour}시입니다!")
if today.hour < 12:
  print("오전입니다!")

if today.hour > 12:
  print("오후입니다!")
