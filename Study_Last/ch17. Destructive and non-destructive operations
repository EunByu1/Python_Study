# + 연산자: 피연산자를 바꾸지 않음
# 비파괴적
a + 10
a + 20
a + 30
a + 40
a + a

# = 연산자: 피연산자를 바꿈
# 파괴적
a = a + 10
a = 20 
a = 30

# upper() & lower()
a = "hEllo PyThOn"

a.upper() # 대문자로 변경 
a.lower() # 소문자로 변경 

print(a)
print(a.upper())
print()

print(a)
print(a.lower())

# strip() 
a = "  안녕하세요     "
a.strip()

print(a)
print(a.strip())

# find() & rfind()

a = "abcdabcd"

# 왼쪽부터 탐색 : 1번째
print(a.find("b"))

# 오른쪽부터 탐색 : 5번째
print(a.rfind("b"))

# 문자열의 in 연산자 
print("안녕" in "안녕하세요")
print("잘가" in "안녕하세요")
